{
  "name": "mf-app-shell",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "lerna run --scope @basic-host-remote/* --parallel start",
    "build": "lerna run --scope @basic-host-remote/* build",
    "serve": "lerna run --scope @basic-host-remote/* --parallel serve",
    "clean": "lerna run --scope @basic-host-remote/* --parallel clean"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "prettier": "^2.2.1"
  },
  "prettier": {
    "eslintIntegration": true,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "requirePragma": false,
    "insertPragma": false,
    "printWidth": 100
  }
}
